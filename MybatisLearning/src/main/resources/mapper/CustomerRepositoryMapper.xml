<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--suppress SqlShadowingAlias, CheckTagEmptyBody -->
<mapper namespace="com.test.repository.CustomerRepository">

    <resultMap id="customerMap" type="com.test.entity.Customer">
        <id property="id" column="cid"></id>
        <result property="name" column="cname"></result>
        <collection property="goods" ofType="com.test.entity.Goods">
            <id property="id" column="gid"></id>
            <result property="name" column="gname"></result>
        </collection>
    </resultMap>

    <select id="getById" resultMap="customerMap" parameterType="java.lang.Integer">
        select c.id cid, c.name cname, g.id gid, g.name gname from customer c, goods g, customer_goods cg WHERE c.id = #{id} and c.id = cg.cid and g.id = cg.gid
    </select>
</mapper>
